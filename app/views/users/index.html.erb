<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th width="10%">Name</th>
      <th width="20%">Email</th>
      <th width="5%">Plan</th>
      <th width="5%">Invoice count</th>
      <th width="5%">Exp year</th>
      <th width="5%">Exp month</th>      
      <th width="5%">Sign in count</th>
      <th width="10%">Last log in</th>
      <th width="10%">Creation date</th>
      <th width="20%">Confirmed date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td width="10%"><%= user.name %></td>
        <td width="20%"><%= user.email %></td>
        <td width="5%"><%= user.plan_id %></td>
        <td width="5%"><%= user.invoice_count %></td>
        <td width="5%"><%= user.exp_year %></td>
        <td width="5%"><%= user.exp_month %></td>
        <td width="5%"><%= user.sign_in_count %></td>
        <td width="10%"><%= user.current_sign_in_at.to_formatted_s(:short) %></td>
        <td width="10%"><%= user.created_at.to_formatted_s(:short) %></td>
        <td width="20%"><%= user.confirmed_at %></td>
        <td width="5%"><%= link_to 'Show', user %></td>
        <td width="5%"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td width="5%"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

