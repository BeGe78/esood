<h1><%= t('profile') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group" style=" width: 20%;">
    <%= f.label t('Email') %><br />
    <%= f.email_field :email, readonly: true, style: "background-color: #FCECC4;" %>
  </div>
<div id="names" style="float:left; width:50%">   
  <div class="form-group" style="float:left; width: 40%;">
    <%= f.label t('Name1') %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group" style="float:right; width: 40%;">
    <%= f.label t('company_name') %>
    <%= f.text_field :company_name, class: 'form-control' %>
    <span class="help-block"><%= t('new_company_name_help') %></span>
  </div>
</div>  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('Currently_waiting_confirmation_for') %> <%= resource.unconfirmed_email %></div>
  <% end %>
<div id="passwords" style="width:50%">
  <div class="form-group" style="float:left; width: 40%;">
    <%= f.label t('Password1') %> <i style="font-size: 80%;"><%= f.label t('new_password_comment') %></i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="form-group" style="float:right; width: 40%;">
    <%= f.label t('Password_confirmation1') %><i style="font-size: 80%;"><%= f.label t('new_password_comment') %></i><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
</div>  

  <div class="form-group" style="width: 20%;">
    <%= f.label t('current_password') %> <i style="font-size: 80%;"><%= f.label t('current_password_comment') %></i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('modify') %>
  </div>
<% end %>

<h3><%= t('Cancel_my_account') %></h3>

<p><%= t('Unhappy') %>
<div class="btn btn-danger">
<%= link_to t('Cancel_my_account'), registration_path(resource_name), data: { confirm: t('are_you_sure') }, method: :delete , :form => { id: "button_cancel" } %>
</div></p>

<%= link_to t('back'), :back %>

<script type="text/javascript">
dataConfirmModal.setDefaults({
  title: "<%= t('confirm_title') %>",
  commit: "<%= t('confirm_commit') %>",
  cancel: "<%= t('confirm_cancel') %>"
});
</script>
