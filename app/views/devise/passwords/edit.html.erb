<h1><%=  t('Change_my_passord') %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group" style="width: 50%;">
    <%= f.label t('Password'), "New password" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
    <span class="help-block"><%= @minimum_password_length %> <%= t('characters_minimum') %></span> 
  </div>

  <div class="form-group" style="width: 50%;">
    <%= f.label t('Password_confirmation'), "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('Change_my_passord') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
