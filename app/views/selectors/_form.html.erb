    <th width="20%"><%= t('name') %></th>
    <th width="20%">type</th>
  </tr>
<% for country in @country_base %>
  <tr>
    <td><%=h country.name %></td>
    <td><%=h country.type %></td>
  </tr>
<% end %>
</table>
   </div> 
   </div> 
   </div>    
</div>

